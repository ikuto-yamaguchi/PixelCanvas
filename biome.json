{
  "$schema": "https://biomejs.dev/schemas/1.2.0/schema.json",
  "rules": {
    "recommended": true
  },
  "files": {
    "include": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx", "**/*.html", "**/*.css", "**/*.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true
  },
  "organizeImports": {
    "enabled": true
  }
}